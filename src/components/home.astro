<style is:global>
  .scanline-text {
    position: relative;
    color: transparent;
    overflow: hidden;
    text-shadow: 0 0 5px rgba(255, 235, 59, 0.7);
  }

  .scanline-text::before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: #FFEB3B;
    background: repeating-linear-gradient(
      to bottom,
      transparent 0%,
      transparent 2%,
      rgba(255, 235, 59, 0.08) 3%,
      transparent 4%
    );
    animation: scanline-flicker 0.1s infinite steps(1);
    pointer-events: none;
  }

  @keyframes scanline-flicker {
    0% { transform: translateY(0); }
    100% { transform: translateY(-5px); }
  }

  /* Nouveau style pour l'effet de lueur pulsante subtile */
  .subtle-glitch-glow {
    text-shadow:
      0 0 3px rgba(255, 255, 255, 0.3),
      0 0 8px #FFEB3B; /* Lueur jaune principale */
    animation: subtle-pulse-flicker 2.5s infinite alternate;
  }

  @keyframes subtle-pulse-flicker {
    0% { opacity: 0.98; text-shadow: 0 0 3px rgba(255, 255, 255, 0.3), 0 0 8px #FFEB3B; }
    50% { opacity: 1; text-shadow: 0 0 5px rgba(255, 255, 255, 0.5), 0 0 12px #FFEB3B; }
    100% { opacity: 0.98; text-shadow: 0 0 3px rgba(255, 255, 255, 0.3), 0 0 8px #FFEB3B; }
  }

  .shiny-sec {
    background: linear-gradient(135deg, #ffeb3b 25%, #fffde7 50%, #ffeb3b 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  // Suppression de l'ancien script de frappe si présent
  const oldScript = document.querySelector('script[data-typing]');
  if (oldScript) {
    oldScript.remove();
  }
</script>
